<form method="post" class="form-signin">
  <h2 class="form-signin-heading">Tire Keeper</h2>
  <label for="user[user_id]" class="sr-only">User Account</label>
  <input type="text" name="user[user_id]" class="form-control" placeholder="User Account" required autofocus>
  <label for="user[pwd]" class="sr-only">Password</label>
  <input type="password" name="user[pwd]" class="form-control" placeholder="Password" required>
  <button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>
</form>
